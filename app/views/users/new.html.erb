<% provide(:title, 'Sign up') %>
<!-- <a href="#" onclick="toggle_visibility('signup');">Don't have an account? Sign up here.</a> -->
 <%= render 'shared/error_messages' %>
<div >
  <h1>Join the game trade network</h1>
  <h4>Have access to games unavailable in stores, or put your games up for sale and name your price.</h4>
  <%= form_for(@user, :html => { :class => "pure-form pure-form-stacked"} ) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :email %>
    <%= f.text_field :email %>
    <span class="help-text">We send <strong>NO</strong> spam, this will only be used by GTN to notify you when someone wants to purchase your games.</span>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <span class="label label-warning">
      <span class="glyphicon glyphicon-info-sign"></span>
       minimum 6 characters
    </span>

    <%= f.label :password_confirmation, "Confirmation" %>
    <%= f.password_field :password_confirmation %>

    <%= f.submit "Sign up for GTN!", class: "btn btn-large btn-primary" %>
  <% end %>
</div>
