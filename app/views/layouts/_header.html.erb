<header class="navbar navbar-fixed-top navbar-inverse" id="nav">
  <div class="navbar-inner">
    <div class="container">
      <div class="row" >
        <div class="col-xs-4 col-md-4">
          <%= link_to image_tag("Logo_W.png", alt: "Game Swap", class: "logo_image"), root_path %>
        </div>
        <div class="col-xs-8 col-md-8">
          <nav>
            <ul class="nav navbar-nav navbar-right">
              <li><%= link_to "Browse",    browse_path %></li>
              <li><%= link_to "Leaderboard",    users_path %></li>
              <li><%= link_to "Help",  help_path %><li>
	      <li style="padding-top: 10px; padding-left: 15px"><button type="button" class="btn btn-success">
		    <%= link_to "Upload Game", upload_path, {:class => "signin_link" } %>
		    <span class="glyphicon glyphicon-cloud-upload"></span>
		    </button>
              </li>
              <li style="padding-left: 20px">
	        <% if signed_in? %>
                  <div class="btn-group" style="padding-top: 10px;">
                      <button type="button" class="btn btn-success">
                         <span class="glyphicon glyphicon-wrench"></span>
                         <%= link_to " Account", current_user, { :class => "signin_link" } %>
                      <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown">
                        <span class="caret"></span>
                        <span class="sr-only">Toggle Dropdown</span>
                      </button>
                      <ul class="dropdown-menu" role="menu">
                        <li><%= link_to "Profile", current_user %></li>
                        <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                        <li class="divider"></li>
                        <li><%= link_to "Sign out", signout_path, method: "delete" %></li>
                      </ul>
                    </div>
                <% else %>
                  <div class="btn-group" style="padding-top: 10px;">
  		    <button type="button" class="btn btn-success">
		       <span class="glyphicon glyphicon-user"></span>
	               <%= link_to " Sign in", signin_path, { :class => "signin_link" } %>  
                    <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown">
    		      <span class="caret"></span>
                      <span class="sr-only">Toggle Dropdown</span>
  		    </button>
  		    <ul class="dropdown-menu" role="menu">
    		      <li><%= link_to "Sign in", signin_path %></li>
                      <li class="divider"></li>
    		      <li><%= link_to "Sign up", signup_path %></li>
 		    </ul>
                  </div>
                <% end %>
	      </li>
            </ul>
          </nav>
        </div>
      </div>
    </div>
  </div>
</header>
