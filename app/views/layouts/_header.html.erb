<header class="navbar navbar-fixed-top navbar-inverse bottom-shadow" id="nav">
  <div class="navbar-inner">
    <div class="container">
      <div class="row" >
        <div class="col-xs-1 col-md-4">
          <h4 style="padding-top: 5px;"><%= link_to "GTN", root_path, { :class => "signin_link" } %></h4>
        </div>
        <div class="col-xs-6 col-md-8">
          <nav>
            <ul class="nav navbar-nav navbar-right">
              <li><%= link_to "Browse",    browse_path %></li>
              <li><%= link_to "Leaderboard",    users_path %></li>
              <li><%= link_to "Help",  help_path %><li>
            
	      <li style="padding-top: 10px; padding-left: 15px"><button type="button" class="btn btn-success">
		    <%= link_to "Sell Game", upload_path, {:class => "signin_link" } %>
		    <span class="glyphicon glyphicon-cloud-upload"></span>
		    </button>
              </li>
               
               <% if signed_in? %>
              <li style="padding-left: 20px">
	       
                  <div class="btn-group" style="padding-top: 10px;">
                      <button type="button" class="btn btn-success">
                         <span class="glyphicon glyphicon-wrench"></span>
                         <%= link_to " Account", current_user, { :class => "signin_link" } %>
                      <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown">
                        <span class="caret"></span>
                        <span class="sr-only">Toggle Dropdown</span>
                      </button>
                      <ul class="dropdown-menu" role="menu">
                        <li><%= link_to "Profile", current_user %></li>
                        <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                        <li class="divider"></li>
                        <li><%= link_to "Sign out", signout_path, method: "delete" %></li>
                      </ul>
                    </div>
                  </li>
                <% else %>
                   <li style="padding-top: 10px; padding-left: 15px"><button type="button" class="btn btn-primary">
        <%= link_to "Sign Up", signup_path, {:class => "signin_link" } %>
        </button>
              </li>
               <li style="padding-top: 10px; padding-left: 15px"><button type="button" class="btn btn-success">
        <%= link_to "Sign In", signin_path, {:class => "signin_link" } %>
        </button>
              </li>

                <% end %>
            </ul>
          </nav>
        </div>
      </div>
    </div>
  </div>
</header>
